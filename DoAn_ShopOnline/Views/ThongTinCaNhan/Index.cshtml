@model  IEnumerable<ShopOnlineConnection.ThongTinCaNhan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        width: 70%;
        margin: auto;
    }

    th, td {
        text-align: left;
        padding: 8px;

    }

    th {
        background-color: #2a9fd6;
        color: white;
    }
</style>
<h2 style="text-align:center;">Thông Tin Tài Khoản</h2>
<table border="1">
    <tr>
        <td style="color: black;">Mã Tài Khoản : </td>
        <td> <input type="text" style=" width:100%;" name="MaTaiKhoan" value="@Model.ElementAt(0).MaTaiKhoan" readonly /> </td>
    </tr>
    <tr>
        <td style="color: black">Tên Tài Khoản: </td>
        <td><input type="text" style="width:100%" name="TenTaiKhoan" value="@Model.ElementAt(0).TenTaiKhoan" readonly /> </td>
    </tr>
    <tr>
        <td style="color: black">Ngày Sinh : </td>
        <td><input type="date" min="1990-01-01" max="2020-01-01" style="width:100%" name="NgaySinh" value="@Model.ElementAt(0).NgaySinh" readonly /> </td>
    </tr>
    <tr>
        <td style="color: black">Số Điện Thoại: </td>
        <td><input type="number" maxlength="12" style="width:100%" name="SoDienThoai" value="@Model.ElementAt(0).SoDienThoai" readonly /> </td>
    </tr>
    <tr>
        <td style="color: black">Địa Chỉ : </td>
        <td><input type="text" style="width:100%" name="DiaChi" value="@Model.ElementAt(0).DiaChi" readonly /> </td>
    </tr>
    <tr>
        <td style="color: black">Giới Tính: </td>
        <td><input type="text" style="width:100%" name="GioiTinh" min="1" max="4" value="@Model.ElementAt(0).GioiTinh" readonly /> </td>
    </tr>

</table>
